<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/main_top_content_height"
    android:background="@drawable/bg_main_top_content"
    android:theme="@android:style/Theme.NoTitleBar"
    >


    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/menuImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_menu" />

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/profileImageView"
        android:layout_alignTop="@+id/menuImageView"
        android:layout_toLeftOf="@+id/menuImageView"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/main_logoff" />

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:background="@drawable/menu_bg"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Messages"
            android:id="@+id/msgTextView"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/msgTextView"
            android:text="MusicList"
            android:id="@+id/listTextView"/>
    </RelativeLayout>

    <!--
    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/backImageView"
        android:layout_marginLeft="17dp"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_alignParentStart="true"
        android:src="@drawable/main_back" />
        -->
</RelativeLayout>