<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/profile_0"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="244dp"
        android:layout_height="24dp"
        android:id="@+id/nameTextView"
        android:textColor="#0f5dad"
        android:textSize="18sp"
        android:text="Han Ting"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/registerTextView"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="244dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:id="@+id/emailTextView"
        android:textColor="#0f5dad"
        android:textSize="18sp"
        android:text="Han Ting"
        android:gravity="center"
        android:layout_below="@+id/nameTextView"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="160dp"
        android:layout_marginTop="40dp"
        android:text="RESET"
        android:textSize="20sp"
        android:id="@+id/resetTextView"
        android:background="@drawable/corner_view_opa_30"
        android:textColor="#aaaaaa"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layout_below="@+id/emailTextView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="Logout"
        android:textSize="20sp"
        android:id="@+id/logoutTextView"
        android:gravity="center"
        android:background="@drawable/corner_view_opa_1_80"
        android:textColor="#ffffff"
        android:layout_below="@+id/resetTextView"
        android:layout_alignLeft="@+id/resetTextView" />




</RelativeLayout>
